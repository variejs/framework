{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./lib/",
    "moduleResolution": "node",
    "lib": ["es6", "dom", "dom.iterable"],
    "target": "es5",
    "strict": true,
    "types": [
      "vue",
      "vuex",
      "node",
      "validator",
      "vue-router",
      "webpack-env",
      "reflect-metadata"
    ],
    "declaration": true,
    "noImplicitAny": false,
    "inlineSourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"]
}
